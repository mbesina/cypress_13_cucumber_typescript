{
  "scripts": {
    "cy:open": "cypress open --browser chrome",
    "cy:run": "cypress run --browser chrome",
    "test:Login": "cypress run --browser chrome --env TAGS=\"@login\"",
    "prettier-format": "prettier --config .prettierrc '**/**/*.ts' --write",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^21.0.3",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/chance": "^1.1.6",
    "@types/cypress": "^1.1.6",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "cucumber": "^6.0.7",
    "cypress": "^13.15.0",
    "eslint": "^9.15.0",
    "eslint-plugin-cypress": "^4.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.13.2",
    "eslint-plugin-promise": "^7.1.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "prettier-plugin-gherkin": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "filterSpecs": true,
    "omitFiltered": true,
    "stepDefinitions": [
      "cypress/step_definitions/*.{js,ts}",
      "cypress/step_definitions/**/*.{js,ts}"
    ]
  },
  "name": "cypress-automation",
  "version": "1.0.0",
  "description": "Cypress Automation with Typescript and Cucumber",
  "keywords": [
    "cypress-typescript-cucumber",
    "cypress"
  ],
  "author": "May Besina",
  "license": "ISC",
  "dependencies": {
    "@types/Chance": "npm:@types/chance@^1.1.6",
    "chance": "^1.1.12"
  }
}
